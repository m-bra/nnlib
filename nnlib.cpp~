#include "nnlib.h"

template <typename T>
T *talloc(unsigned size)
{
	return static_cast<T *>(malloc(sizeof(T) * size));
}

template <typename T>
void tfree(T *ptr)
{
	free(ptr);
}

template <typename T>
T *trealloc(T *ptr, unsigned size)
{
	return static_cast<T *>(realloc(ptr, sizeof(T) * size));
}

